<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_linear_register"
    android:paddingVertical="50dp"
    android:paddingHorizontal="18dp"
    android:layout_gravity="center"
    tools:context=".main.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/bold"
            android:textSize="20sp"
            android:text="@string/approve_qr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_background_no"
                android:text="@string/not"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:layout_marginEnd="28dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_background_yes"
                android:layout_marginStart="28dp"
                android:text="Yes"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>